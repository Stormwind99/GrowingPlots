<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<ThingDef ParentName="BuildingBase">
		<defName>GrowingPlot</defName>
		<label>growing plot</label>
		<description>Grows plants in an dedicated patch of soil.</description>
		<thingClass>Building_PlantGrower</thingClass>
		<graphicData>
			<texPath>Things/Building/GrowingPlot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3,3)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>60</pathCost>
		<castEdgeShadows>false</castEdgeShadows>
		<fillPercent>0.30</fillPercent>
		<statBases>
			<WorkToBuild>2800</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Cleanliness>-7</Cleanliness>
		</statBases>
		<size>(3,3)</size>
		<costStuffCount>100</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<fertility>1</fertility>
		<building>
			<defaultPlantToGrow>PlantPotato</defaultPlantToGrow> 
			<sowTag>Hydroponic</sowTag>
		</building>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Production</designationCategory>
	</ThingDef>
	
	<ThingDef ParentName="BuildingBase">
		<defName>RichGrowingPlot</defName>
		<label>rich growing plot</label>
		<description>Grows plants in an dedicated patch of rich soil.</description>
		<thingClass>Building_PlantGrower</thingClass>
		<graphicData>
			<texPath>Things/Building/RichGrowingPlot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3,3)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>60</pathCost>
		<castEdgeShadows>false</castEdgeShadows>
		<fillPercent>0.30</fillPercent>
		<statBases>
			<WorkToBuild>2800</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Cleanliness>-7</Cleanliness>
		</statBases>
		<size>(3,3)</size>
		<costStuffCount>100</costStuffCount>
		<CostList>
			<Neutroamine>10</Neutroamine>
		</CostList>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<fertility>1.4</fertility>
		<building>
			<defaultPlantToGrow>PlantPotato</defaultPlantToGrow>
			<sowTag>Hydroponic</sowTag>
		</building>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<researchPrerequisites><li>Hydroponics</li></researchPrerequisites>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Production</designationCategory>
	</ThingDef>
	
</ThingDefs>